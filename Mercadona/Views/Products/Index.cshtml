@model IEnumerable<Mercadona.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Produits</h1>

<p>
    <a class="btn btn-add-cancel float-end" asp-action="Create">Ajouter</a>
</p>

<table class="table table-hover mt-4">
    <thead>
        <tr>
             <th scope="col">
                Image
            </th>
            <th scope="col">
                Nom
            </th>
            <th scope="col">
                Description
            </th>
            <th scope="col">
                Prix
            </th>

            <th scope="col">
                Catégorie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Picture)" class="card-img-top">

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-detail icon-product" asp-action="Details" asp-route-id="@item.Id">Voir le détail <i class="fa-regular fa-eye"></i></a>
                    <a class="btn btn-sm btn-edit icon-product" asp-action="Edit" asp-route-id="@item.Id">Modifier <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    <a class="btn btn-sm btn-delete icon-product" asp-action="Delete" asp-route-id="@item.Id">Supprimer <i class="fa fa-trash-o" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>