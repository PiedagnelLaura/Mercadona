@model IEnumerable<Mercadona.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Catégories</h1>

<p>
    <a class="btn btn-success float-end" asp-action="Create">Ajouter</a>
</p>
<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th scope="col">
                Libellé
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-end">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>


         