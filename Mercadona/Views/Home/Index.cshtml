@model Mercadona.ViewModel.ProductViewModel
@{
    ViewData["Title"] = "Mercadona";
}

<div class="text-center">
    <h1 class="display-4">Catalogue des produits</h1>

    <div class="container-fluid bg-trasparent my-4 p-3" style="position: relative;">
        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
            @foreach (var product in Model.Products) {
                
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="gp-img">
                            <img src="@product.Picture" class="card-img-top">
                            <span class="gp-cat-prod">@product.Category.Name</span>
                            
                        </div>

                        <div class="card-body d-flex flex-column justify-content-between mt-0">
                            <div>
                                <h5>@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                            </div>
                            <div class="price mt-1 mb-3 d-flex flex-column align-items-end">
                                @if (Model.NewPrices.ContainsKey(product.Id))
                                {
                                   
                                        <span class="text-decoration-line-through">@product.Price €</span>
                                        <span class="fw-bold text-danger">  @Model.NewPrices[product.Id] €</span>
                                  
                                }
                                else
                                {
                                    <span >@product.Price €</span>
                                }
                            </div>
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
